@page
@model GestionPanier.Pages.CartModel
@{
    ViewData["Title"] = "Mon Panier";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (Model.CartItems == null || !Model.CartItems.Any())
{
    <div class="alert alert-info">Votre panier est vide.</div>
}
else
{
    <form method="post" asp-page-handler="UpdateQuantities">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Produit</th>
                    <th>Prix Unitaire</th>
                    <th>Quantité</th>
                    <th>Sous-total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CartItems.Count; i++)
                {
                    var item = Model.CartItems[i];
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>
                            <input type="hidden" asp-for="CartItems[@i].ProductId" />
                            <input type="hidden" asp-for="CartItems[@i].ProductName" />
                            <input type="hidden" asp-for="CartItems[@i].UnitPrice" />
                            <input type="number" asp-for="CartItems[@i].Quantity" min="1" class="form-control" style="width:80px;" />
                        </td>
                        <td>@( ((decimal)item.UnitPrice * item.Quantity).ToString("C") )</td>
                        <td>
                            <button type="submit" asp-page-handler="Remove" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">Supprimer</button>

                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end"><strong>Total :</strong></td>
                    <td colspan="2">@Model.TotalPrice.ToString("C")</td>
                </tr>
            </tfoot>
        </table>
        <button type="submit" class="btn btn-primary">Mettre à jour les quantités</button>
    </form>
    <div class="mt-3">
        <a asp-page="/Index" class="btn btn-secondary">Continuer vos achats</a>
        @* <a asp-page="/Commandes/Checkout" class="btn btn-success ms-2">Passer à la commande</a> *@
        <form method="post" asp-page-handler="ClearCart" class="d-inline">
            <button type="submit" class="btn btn-danger ms-2">Vider le panier</button>
        </form>
    </div>
}