@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="display-4 text-center my-4">Bienvenue dans le store</h1>

<div class="container-fluid">
    <div class="row">
        <!-- Liste des produits -->
        <div class="col-9">
            <h3 class="text-center mb-3">Liste des produits</h3>
            <div class="row g-3">
                @foreach (var produit in Model.Produits)
                {
                    <div class="col-12 col-sm-6 col-md-4">
                        <div class="card text-center h-100 bg-warning">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@produit.Nom</h5>
                                <p class="card-text">Prix: @produit.Prix.ToString("C")</p>
                                <p class="card-text">Stock: @produit.Stock</p>
                                <div class="mt-auto">
                                    <form method="post" asp-page="/Panier" asp-page-handler="Add" style="display: inline;">
                                        <input type="hidden" name="productId" value="@produit.Id" />
                                        <button type="submit" class="btn btn-success" title="Ajouter au panier">
                                            <i class="fas fa-cart-plus"></i> Ajouter
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Navigation -->
        <div class="col-3 border-start border-2 border-dark text-center">
            <h4>Navigation</h4>
            <ul class="list-unstyled mt-3">
                <li>
                    <a class="btn btn-outline-primary w-100 mb-2" asp-page="/Produits/Index">Produits</a>
                </li>
            </ul>
        </div>
    </div>
</div>
